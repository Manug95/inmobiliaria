@using InmobiliariaGutierrezManuel.Models;

<div id="modal_detalle_contrato" class="modal fade modal-md" tabindex="-1" aria-describedby="titulo-modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div id="titulo-modal" class="modal-title fs-5">Detalle Contrato</div>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="body-detalle" class="modal-body justify-content-center align-items-center">
                <div class="container-md align-middle">
                    <div class="d-flex justify-content-center align-items-center vh-50 w-100">
                        
                        <div class="card w-100">
                            <div class="card-header">
                                Detalle del Contrato n째 <span id="nro"></span>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <span class="fw-bold">Propietario: &nbsp;</span>
                                        @* </br> *@
                                        <span id="propietario"></span>
                                    </li>
                                    <li class="list-group-item">
                                        <span class="fw-bold">Inquilino: &nbsp;</span>
                                        @* </br> *@
                                        <span id="inquilino"></span>
                                    </li>
                                    <li class="list-group-item">
                                        <span class="fw-bold">Direcci처n Inmueble: &nbsp;</span>
                                        @* </br> *@
                                        <span id="direccion"></span>
                                    </li>
                                    <li class="list-group-item">
                                        <span class="fw-bold">Tipo Inmueble: &nbsp;</span>
                                        @* </br> *@
                                        <span id="detalle_tipo"></span>
                                    </li>
                                    <li class="list-group-item">
                                        <span class="fw-bold">Uso del Inmueble: &nbsp;</span>
                                        @* </br> *@
                                        <span id="detalle_uso"></span>
                                    </li>
                                    <li class="list-group-item">
                                        <span class="fw-bold">Fecha de Inicio: &nbsp;</span>
                                        @* </br> *@
                                        <span id="fIni"></span>
                                    </li>
                                    <li class="list-group-item">
                                        <span class="fw-bold">Fecha de Finalizaci처n: &nbsp;</span>
                                        @* </br> *@
                                        <span id="fFin"></span>
                                    </li>
                                    <li class="list-group-item">
                                        <span class="fw-bold">Mensualizaci처n: &nbsp;</span>
                                        @* </br> *@
                                        <span id="monto"></span>
                                    </li>
                                    <li class="list-group-item">
                                        <span class="fw-bold">Fecha Terminado: &nbsp;</span>
                                        @* </br> *@
                                        <span id="fTerm"></span>
                                    </li>
                                    @if (User.IsInRole(Rol.ADMIN.ToString())) {
                                        <li class="list-group-item">
                                            <span class="fw-bold">Contratado Por: &nbsp;</span>
                                            @* <br> *@
                                            <span id="contratador"></span>
                                        </li>
                                        <li class="list-group-item">
                                            <span class="fw-bold">Terminado Por: &nbsp;</span>
                                            @* <br> *@
                                            <span id="terminador"></span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="body-mensaje" class="modal-body justify-content-center align-items-center d-none">
                <p id="mensaje" class="text-center text-danger fw-bold fs-5">No se encontraron los datos</p>
            </div>
        </div>
    </div>
</div>