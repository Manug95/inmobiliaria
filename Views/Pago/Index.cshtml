@using Microsoft.VisualBasic
@model Pago
@{
    ViewData["Title"] = "Pagos";
}

<link rel="stylesheet" href="~/css/tablas.css">
<link rel="stylesheet" href="~/css/styles.css">

<h1 id="titulo" data-modelo="@nameof(Pago)" class="text-center mt-2">Pagos</h1>

<partial name="_PagoTabla" model="ViewBag.pagos"/>

<partial name="_DetallePagoModal"/>

<partial name="_ModalPregunta"/>

<div id="modal_formulario_editar_pago" class="modal fade modal-lg" tabindex="-1" aria-describedby="titulo-modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div id="titulo-modal" class="modal-title fs-5">Formulario</div>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body justify-content-center align-items-center">
                <div class="container-md">
                    <div class="d-flex justify-content-center align-items-center vh-50 w-100">
                        <form asp-action="Guardar" id="form-edit-pago" class="p-3 w-75 mx-auto border rounded-4 shadow-sm needs-validation mt-3 mb-3 bg-light-subtle">
                            <div class="row mb-md-4">
                                <div class="col-12 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Detalle" class="form-label fw-bold">Detalle</label>
                                        <textarea asp-for="Detalle" id="Detalle-edit" class="form-control" rows="3"></textarea>
                                        <div id="tpe_Detalle" class="invalid-tooltip"></div>
                                    </div>
                                </div>
                            </div>

                            <input id="Id" type="hidden" asp-for="Id"/>
                            <input id="Fecha" type="hidden" asp-for="Fecha"/>
                            <input id="Importe" type="hidden" asp-for="Importe"/>

                            <div class="row mb-2 mt-5 mt-md-4 justify-content-evenly align-items-end pt-3">
                                <div class="col-2 d-flex justify-content-center">
                                    <input type="submit" value="Guardar" class="btn btn-primary d-block mx-auto">
                                </div>
                                <div class="col-2 d-flex justify-content-center">
                                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancelar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if(!string.IsNullOrEmpty(ViewBag.mensajeError)) {
    <partial name="_MensajeError" model="ViewBag.mensajeError"/>
}


<script type="module" src="~/js/pagos.js"></script>