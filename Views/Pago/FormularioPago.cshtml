@using InmobiliariaGutierrezManuel.Models;
@using System.Globalization

@model Pago;

<link rel="stylesheet" href="~/css/styles.css">

<div class="container-md align-middle">
    <h1 id="titulo" class="text-center mt-2">Formulario Pago</h1>

    <div class="d-flex justify-content-center align-items-center vh-50 w-100">
        <form asp-action="Guardar" id="form-pago" class="p-3 w-75 mx-auto border rounded-4 shadow-sm needs-validation mt-3 mb-3 bg-light-subtle">
            <div class="row mb-md-4">
                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                    <div class="position-relative">
                        <label asp-for="Fecha" class="form-label fw-bold">Fecha</label>
                        <input type="date" asp-for="Fecha" class="form-control" id="Fecha">
                        <div id="tpe_Fecha" class="invalid-tooltip"></div>
                    </div>
                </div>
                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                    <div class="position-relative">
                        <label asp-for="Importe" class="form-label fw-bold">Importe</label>
                        <input type="number" asp-for="Importe" class="form-control" id="Importe">
                        <div id="tpe_Importe" class="invalid-tooltip"></div>
                    </div>
                </div>
            </div>

            <div class="row mb-md-4">
                <div class="col-12 mt-5 mt-md-3 mb-md-0">
                    <div class="position-relative">
                        <label asp-for="Detalle" class="form-label fw-bold">Detalle</label>
                        <textarea asp-for="Detalle" id="Detalle" class="form-control" rows="3" placeholder="(opcional) agregue un detalle al pago"></textarea>
                        <div id="tpe_Detalle" class="invalid-tooltip"></div>
                    </div>
                </div>
            </div>

            <input id="Id" type="hidden" asp-for="Id"/>
            <input id="IdContrato" type="hidden" asp-for="IdContrato"/>

            <div class="row mb-2 mt-5 mt-md-4 justify-content-evenly align-items-end pt-3">
                <div class="col-2 d-flex justify-content-center">
                    <input type="submit" value="Guardar" class="btn btn-primary d-block mx-auto">
                </div>
                <div class="col-2 d-flex justify-content-center">
                    <a class="btn btn-secondary px-3" type="button" asp-action="Index">Cancelar</a>
                </div>
            </div>
        </form>

    </div>
</div>

@if (ViewBag.mensajeError != null) {
    <partial name="_MensajeError" model="ViewBag.mensajeError"/>
}

<script type="module" src="~/js/pagoForm.js"></script>