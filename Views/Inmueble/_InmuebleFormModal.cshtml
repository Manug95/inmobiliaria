@using InmobiliariaGutierrezManuel.Models.ViewModels;

@model InmuebleViewModel;

<div id="modal_formulario_inmueble" class="modal fade modal-lg" tabindex="-1" aria-describedby="titulo-modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div id="titulo-modal" class="modal-title fs-5">Formulario</div>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body justify-content-center align-items-center">
                <div class="container-md">
                    <div class="d-flex justify-content-center align-items-center vh-50 w-100">
                        <form asp-action="Guardar" id="form-inmueble" class="p-3 w-75 mx-auto border rounded-4 shadow-sm needs-validation mt-3 mb-3 bg-light-subtle">
                            <div class="row mb-md-4">
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Inmueble.Calle" class="form-label fw-bold">Calle</label>
                                        <input type="text" asp-for="Inmueble.Calle" class="form-control" id="calle">
                                        <div id="tpe_calle" class="invalid-tooltip"></div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Inmueble.NroCalle" class="form-label fw-bold">Nro</label>
                                        <input type="text" asp-for="Inmueble.NroCalle" class="form-control" id="nro">
                                        <div id="tpe_nro" class="invalid-tooltip"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-md-4">
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Inmueble.Tipo" class="form-label">Tipo de inmueble</label>
                                        <select asp-for="Inmueble.Tipo" class="form-control" id="tipo">
                                            <option value="" selected disabled>Seleccione el tipo</option>
                                            @for (int i = 0; i < Model?.TiposInmuebles?.Count(); i++) {
                                                <option value="@Model?.TiposInmuebles.ElementAt(i).Id">@Model?.TiposInmuebles.ElementAt(i).Tipo</option>
                                            }
                                        </select>
                                        <div id="tpe_tipo" class="invalid-tooltip"></div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Inmueble.Uso" class="form-label fw-bold">Uso que tendr√° el inmueble</label>
                                        <select asp-for="Inmueble.Uso" class="form-control" id="uso">
                                            <option value="" selected disabled>Seleccione el uso</option>
                                            <option value="RESIDENCIAL" selected disabled>RESIDENCIAL</option>
                                            <option value="COMERCIAL" selected disabled>COMERCIAL</option>
                                        </select>
                                        <div id="tpe_uso" class="invalid-tooltip"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-md-4">
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Inmueble.CantidadAmbientes" class="form-label fw-bold">Cantidad de ambientes</label>
                                        <input type="text" asp-for="Inmueble.CantidadAmbientes" class="form-control" id="cant_amb">
                                        <div id="tpe_cant_amb" class="invalid-tooltip"></div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Inmueble.Precio" class="form-label fw-bold">Precio</label>
                                        <input type="text" asp-for="Inmueble.Precio" class="form-control" id="precio">
                                        <div id="tpe_precio" class="invalid-tooltip"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-md-4">
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Inmueble.Latitud" class="form-label fw-bold">Latitud</label>
                                        <input type="text" asp-for="Inmueble.Latitud" class="form-control" id="latitud">
                                        <div id="tpe_latitud" class="invalid-tooltip"></div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Inmueble.Longitud" class="form-label fw-bold">Longitud</label>
                                        <input type="text" asp-for="Inmueble.Longitud" class="form-control" id="longitud">
                                        <div id="tpe_longitud" class="invalid-tooltip"></div>
                                    </div>
                                </div>
                            </div>

                            <input id="Id" type="hidden" asp-for="Inmueble.Id"/>

                            <div class="row mb-2 mt-5 mt-md-4 justify-content-evenly align-items-end pt-3">
                                <div class="col-2 d-flex justify-content-center">
                                    <input type="submit" value="Guardar" class="btn btn-primary d-block mx-auto">
                                </div>
                                <div class="col-2 d-flex justify-content-center">
                                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancelar</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>