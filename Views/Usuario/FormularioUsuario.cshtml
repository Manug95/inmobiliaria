@using InmobiliariaGutierrezManuel.Models;
@model Usuario;

@{
    ViewData["Title"] = "Formulario Usuario";
}

<div class="container-md mt-3">
    <h1 class="text-center">Formulario Usuario</h1>

    <div class="d-flex justify-content-center align-items-center vh-50 w-100 mt-5">
        <form asp-action="Guardar" id="form-usuario" enctype="multipart/form-data" class="p-3 w-75 mx-auto border rounded-4 shadow-sm needs-validation mt-3 mb-3 bg-light-subtle">
            <div class="row mt-3 mb-md-4">
                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                    <div class="position-relative">
                        <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                        <input type="text" asp-for="Nombre" class="form-control" id="Nombre">
                        <div id="tpe_Nombre" class="invalid-tooltip"></div>
                    </div>
                </div>
                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                    <div class="position-relative">
                        <label asp-for="Apellido" class="form-label fw-bold">Apellido</label>
                        <input type="text" asp-for="Apellido" class="form-control" id="Apellido">
                        <div id="tpe_Apellido" class="invalid-tooltip"></div>
                    </div>
                </div>
            </div>

            <div class="row mb-md-4">
                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                    <div class="position-relative">
                        <label asp-for="Email" class="form-label fw-bold">Email</label>
                        <input type="email" asp-for="Email" class="form-control" id="Email">
                        <div id="tpe_Email" class="invalid-tooltip"></div>
                    </div>
                </div>
                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                    <div class="position-relative">
                        <label asp-for="Password" class="form-label fw-bold">Contrase√±a</label>
                        <input type="password" asp-for="Password" class="form-control" id="Password">
                        <div id="tpe_Password" class="invalid-tooltip"></div>
                    </div>
                </div>
            </div>

            <div class="row mb-md-4">
                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                    <div class="position-relative">
                        <label asp-for="AvatarFile" class="form-label fw-bold">Avatar</label>
                        <input type="file" name="AvatarFile" class="form-control" id="Avatar" accept="image/*">
                        <div id="tpe_Avatar" class="invalid-tooltip"></div>
                    </div>
                </div>
                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                    <div class="position-relative">
                        <label asp-for="Rol" class="form-label fw-bold">Rol</label>
                        <select class="form-select" asp-for="Rol" id="Rol">
                            <option value="" selected disabled>Seleccionar Rol</option>
                            <option value="@Rol.ADMIN">@Rol.ADMIN</option>
                            <option value="@Rol.EMPLEADO">@Rol.EMPLEADO</option>
                        </select>
                        <div id="tpe_Rol" class="invalid-tooltip"></div>
                    </div>
                </div>
            </div>

            <input type="hidden" asp-for="Id"/>

            <div class="row mb-2 mt-5 mt-md-4 justify-content-center">
                <div class="col-2 d-flex justify-content-center">
                    <input type="submit" value="Guardar" class="btn btn-primary d-block mx-auto">
                </div>
                <div class="col-2 d-flex justify-content-center">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </form>

    </div>
</div>

@if(!string.IsNullOrWhiteSpace(ViewBag.mensajeError)) {
    <partial name="_MensajeError" model="ViewBag.mensajeError" />
}

<script type="module" src="~/js/usuarioForm.js"></script>