@model Inquilino;

<div id="modal_formulario_inquilino" class="modal fade modal-lg" tabindex="-1" aria-describedby="titulo-modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div id="titulo-modal" class="modal-title fs-5">Formulario</div>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body justify-content-center align-items-center">
                <div class="container-md">
                    <div class="d-flex justify-content-center align-items-center vh-50 w-100">
                        <form asp-action="Guardar" id="form-inquilino" class="p-3 w-75 mx-auto border rounded-4 shadow-sm needs-validation mt-3 mb-3 bg-light-subtle">
                            <div class="row mb-md-4">
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                                        <input type="text" asp-for="Nombre" class="form-control" id="nombre">
                                        <div id="tpe_nombre" class="invalid-tooltip">Falta el nombre o es incorrecto</div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Apellido" class="form-label fw-bold">Apellido</label>
                                        <input type="text" asp-for="Apellido" class="form-control" id="apellido">
                                        <div id="tpe_apellido" class="invalid-tooltip">Falta el apellido o es incorrecto</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-md-4">
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Dni" class="form-label fw-bold">DNI</label>
                                        <input type="text" asp-for="Dni" class="form-control" id="dni">
                                        <div id="tpe_dni" class="invalid-tooltip">Falta el DNI o es incorrecto</div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Telefono" class="form-label fw-bold">Teléfono</label>
                                        <input type="text" asp-for="Telefono" class="form-control" id="telefono">
                                        <div id="tpe_telefono" class="invalid-tooltip">Falta el teléfono o es incorrecto</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-md-4">
                                <div class="col-12 col-md-6 mt-5 mt-md-3 mb-md-0">
                                    <div class="position-relative">
                                        <label asp-for="Email" class="form-label fw-bold">Email</label>
                                        <input type="email" asp-for="Email" class="form-control" id="email">
                                        <div id="tpe_email" class="invalid-tooltip">Falta el email o es incorrecto</div>
                                    </div>
                                </div>
                            </div>

                            <input id="Id" type="hidden" asp-for="Id" aria-hidden="true"/>

                            <div class="row mb-2 mt-5 mt-md-4 justify-content-evenly align-items-end pt-3">
                                <div class="col-2 d-flex justify-content-center">
                                    <input type="submit" value="Guardar" class="btn btn-primary d-block mx-auto">
                                </div>
                                <div class="col-2 d-flex justify-content-center">
                                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancelar</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>